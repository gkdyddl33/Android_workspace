<?xml version="1.0" encoding="utf-8"?>
<!--이 아이는 자식이다.. 그래서 부분적으로 있는 것이므로 부모가 필요하다
    부모는 activity_main이므로 MainActivity에서 inflater를 해줘야한다.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/profile_root"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/pro" />

    <LinearLayout
        android:id="@+id/text_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_id"
            style="@style/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ID : mario" />

        <TextView
            android:id="@+id/t_pass"
            style="@style/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pass : 568***" />

        <TextView
            android:id="@+id/t_name"
            style="@style/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name : 마리오" />
    </LinearLayout>
</LinearLayout>